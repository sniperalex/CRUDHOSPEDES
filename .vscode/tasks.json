{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "maven: compile",
      "type": "shell",
      "command": "mvn",
      "args": [
        "clean",
        "compile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "maven: exec Main",
      "type": "shell",
      "command": "mvn",
      "args": [
        "exec:java",
        "-Dexec.mainClass=br.com.hotel.Main"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
